{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDirs": ["src", "app/src"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "app/*"],
      "@components/*": ["common/components/*"],
      "@core/*": ["core/*"],
      "@hooks/*": ["hooks/*"],
    },
    "typeRoots": ["@types/*"],
    // "types": ["@types"],
    "composite": false
  },
  "include": [
    "src/**/*",
    "app/src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}