{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "*": ["*", "app/*"],
      "@components/*": ["common/components/*"],
      "@core/*": ["core/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["@types"]
    },
    "typeRoots": ["@types/*"],
    "types": ["node", "jest", "express"],
    "composite": false
  },
  "include": [
    "src/**/*",
    "app/src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}