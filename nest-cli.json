{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger/plugin"
    ],
    "options": {
      "classValidatorShim": true,
      "introspectComments": true,
      "dtoFileNameSuffix": [
        ".entity.ts",
        ".dto.ts"
      ],
      "controllerFileNameSuffix": [
        ".controller.ts"
      ]
    }
  }
}